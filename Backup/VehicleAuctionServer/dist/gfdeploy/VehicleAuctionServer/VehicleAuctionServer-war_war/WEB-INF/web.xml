<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VehicleAuctionServlet</servlet-name>
        <servlet-class>servlets.VehicleAuctionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerStatus</servlet-name>
        <jsp-file>/registerStatus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>loginStatus</servlet-name>
        <jsp-file>/loginStatus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateProfile</servlet-name>
        <jsp-file>/updateProfile.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateProfileStatus</servlet-name>
        <jsp-file>/updateProfileStatus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>searchVehicle</servlet-name>
        <jsp-file>/searchVehicle.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>searchVehicleStatus</servlet-name>
        <jsp-file>/searchVehicleStatus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>logoutStatus</servlet-name>
        <jsp-file>/logoutStatus.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerStatus</servlet-name>
        <url-pattern>/registerStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProfileStatus</servlet-name>
        <url-pattern>/updateProfileStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProfile</servlet-name>
        <url-pattern>/updateProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchVehicleStatus</servlet-name>
        <url-pattern>/searchVehicleStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchVehicle</servlet-name>
        <url-pattern>/searchVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginStatus</servlet-name>
        <url-pattern>/loginStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutStatus</servlet-name>
        <url-pattern>/logoutStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VehicleAuctionServlet</servlet-name>
        <url-pattern>/vehicleAuction/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
